<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="353.0" prefWidth="591.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hospitalityhelper.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ToolBar prefHeight="35.0" prefWidth="539.0">
     <items>
         <Button fx:id="homeBtn" mnemonicParsing="false" onAction="#onAddHomeClicked" prefHeight="25.0" prefWidth="76.0" text="Home" />
         <Button fx:id="menuBtn" mnemonicParsing="false" onAction="#onAddMenuItemClicked" text="Add Menu Item" />
         <Button fx:id="stockBtn" mnemonicParsing="false" onAction="#onStockItemClicked" text="Add Stock Item" />
         <Button fx:id="salesBtn" mnemonicParsing="false" onAction="#onAddSaleDataClicked" text="Add sales data">
            <effect>
               <InnerShadow />
            </effect></Button>
         <Button fx:id="predictedBtn" mnemonicParsing="false" onAction="#onPredictedSalesClicked" text="Predicted sales data" />
     </items>
   </ToolBar>

    <Label fx:id="welcomeText" />
   <FlowPane prefHeight="258.0" prefWidth="551.0">
      <children>
         <VBox prefHeight="200.0" prefWidth="190.0">
            <children>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Currently saved sales data" />
               <TableView prefHeight="200.0" prefWidth="195.0">
                 <columns>
                   <TableColumn prefWidth="90.0" text="Date" />
                     <TableColumn prefWidth="90.0" text="Total" />
                 </columns>
               </TableView>
            </children>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="35.0" />
         <VBox prefHeight="200.0" prefWidth="324.0">
            <children>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Choose a file to upload onto the system" />
               <Button mnemonicParsing="false" text="Choose File" />
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Date of sales" />
               <TextField />
               <Text strokeType="OUTSIDE" strokeWidth="0.0" />
               <Button mnemonicParsing="false" text="Submit" />
            </children>
         </VBox>
      </children>
   </FlowPane>
</VBox>
