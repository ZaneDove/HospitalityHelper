               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Measured In" />
               <ChoiceBox prefWidth="150.0" />
               <Text strokeType="OUTSIDE" strokeWidth="0.0" />
               <Button mnemonicParsing="false" text="Button" />
            </children>
         </VBox>
      </children>
   </HBox>
</VBox>
